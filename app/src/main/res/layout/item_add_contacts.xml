<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="82dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline_contactItem_034"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline_contactItem_054"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline_contactItem_066"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline_contactItem_006"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline_contactItem_018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline_contactItem_020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline_contactItem_092"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"

        android:src="@drawable/recyclerview_contact_item_background"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/dimension_8dp"

        android:contentDescription="Profile photo"

        app:layout_constraintBottom_toBottomOf="@id/imageViewBackground"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/verticalGuideline_contactItem_006"
        app:layout_constraintTop_toTopOf="@id/imageViewBackground"

        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMainName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimension_8dp"
        android:layout_marginTop="@dimen/dimension_8dp"
        android:layout_marginEnd="16dp"

        android:ellipsize="end"
        android:fontFamily="@font/opensans_semi_bold"
        android:lines="1"
        android:scrollHorizontally="true"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline_contactItem_054"
        app:layout_constraintEnd_toStartOf="@id/textViewAddContactContactsAdd"
        app:layout_constraintStart_toEndOf="@id/imageViewPhoto"

        tools:text="Very long test name AABBCCDDEE" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMainProfession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimension_8dp"

        android:ellipsize="end"
        android:fontFamily="@font/opensans_regular"
        android:lines="1"
        android:textSize="12sp"

        app:layout_constraintEnd_toEndOf="@id/textViewMainName"
        app:layout_constraintStart_toStartOf="@id/textViewMainName"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideline_contactItem_054"
        tools:text="Profession1234123412341234123412341234123412341234" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAddContactContactsAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimension_8dp"

        android:fontFamily="@font/opensans_semi_bold"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_18sp"

        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline_contactItem_066"
        app:layout_constraintEnd_toStartOf="@id/imageAddContactsButtonPlus"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline_contactItem_034"

        tools:text="Add" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageAddContactsButtonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline_contactItem_066"
        app:layout_constraintEnd_toEndOf="@id/verticalGuideline_contactItem_092"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline_contactItem_034" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageAddContactsCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline_contactItem_066"
        app:layout_constraintEnd_toEndOf="@id/verticalGuideline_contactItem_092"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideline_contactItem_034" />

</androidx.constraintlayout.widget.ConstraintLayout>